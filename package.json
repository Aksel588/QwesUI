{
  "name": "qwesui",
  "version": "1.0.0",
  "description": "Modern, lightweight frontend framework for fast UI development with optional AI-powered tools",
  "main": "dist/qwesui.min.js",
  "style": "dist/qwesui.min.css",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/css/qwesui.scss:dist/qwesui.css --style compressed",
    "build:js": "webpack --mode production",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "sass src/css/qwesui.scss:dist/qwesui.css --watch",
    "dev:js": "webpack --mode development --watch",
    "start": "npm run dev",
    "clean": "rm -rf dist/*",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "css",
    "framework",
    "ui",
    "components",
    "utility-classes",
    "frontend",
    "responsive",
    "modern"
  ],
  "author": "QwesUI Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aksel588/QwesUI.git"
  },
  "bugs": {
    "url": "https://github.com/qwesui/qwesui/issues"
  },
  "homepage": "https://qwesui.com",
  "devDependencies": {
    "sass": "^1.69.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ]
}
